# Clawdspace GPU sandbox image
# - Based on the PyTorch CUDA runtime image
# - Adds clawdspace essentials (git, curl, jq, tmux, etc)
# - Creates the sandbox user + workspace

FROM pytorch/pytorch:2.1.0-cuda12.1-cudnn8-runtime

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl wget git \
    jq htop tmux \
    vim nano \
    build-essential \
    python3 python3-pip python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Create sandbox user
RUN groupadd -g 1001 sandbox && useradd -m -u 1001 -g 1001 -s /bin/bash sandbox

# Workspace
RUN mkdir -p /workspace && chown -R 1001:1001 /workspace \
  && printf '%s\n' \
    'export HISTFILE=/workspace/.bash_history' \
    'export HISTSIZE=100000' \
    'export HISTFILESIZE=200000' \
    'export HISTCONTROL=ignoreboth' \
    "export HISTTIMEFORMAT='%s '" \
    'shopt -s histappend' \
    'export PROMPT_COMMAND="history -a; history -n; ${PROMPT_COMMAND}"' \
    > /etc/profile.d/clawdspace_history.sh

WORKDIR /workspace
